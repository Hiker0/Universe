<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="TestTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TestTheme.NoTitle" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#016679</item>
    </style>

    <style name="cust_theme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="ButtonStyle">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#00ffff</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="TimeViewStyle">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">@dimen/vertical_grap</item>
    </style>

    <style name="ImageViewStyle">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>


</resources>