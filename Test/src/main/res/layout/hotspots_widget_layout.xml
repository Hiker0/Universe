<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/le_hot_spots_title"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_0_0"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>

            <TextView
                android:id="@+id/id_0_1"
                android:layout_marginStart="5dp"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_1_0"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>

            <TextView
                android:id="@+id/id_1_1"
                android:layout_marginStart="5dp"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_2_0"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>

            <TextView
                android:id="@+id/id_2_1"
                android:layout_marginStart="5dp"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_3_0"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>

            <TextView
                android:id="@+id/id_3_1"
                android:layout_marginStart="5dp"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_4_0"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>

            <TextView
                android:id="@+id/id_4_1"
                android:layout_marginStart="5dp"
                style="@style/HotSpotsItem"
                android:text="@string/le_hot_spots_title" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>